{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node", "config": { "maxLambdaSize": "100mb" } },
    { "src": "api/**/*", "use": "@vercel/node", "config": { "maxLambdaSize": "100mb" } }
  ],
  "routes": [
    { "src": "/", "dest": "/server.js" },
    { "src": "/api/parse-query", "dest": "/api/parse-query" },
    { "src": "/api/create-subpersona", "dest": "/api/create-subpersona" },
    { "src": "/api/compress-memory", "dest": "/api/compress-memory" },
    { "src": "/api/context-recap", "dest": "/api/context-recap" },
    { "src": "/api/autonomous", "dest": "/api/autonomous" },
    { "src": "/api/feedback", "dest": "/api/feedback" },
    { "src": "/api/fetch-gauge-metrics", "dest": "/api/fetch-gauge-metrics" },
    { "src": "/api/recommendations", "dest": "/api/recommendations" },
    { "src": "/api/tasks/dependency", "dest": "/api/tasks", "methods": ["POST"] },
    { "src": "/api/tasks/dependencies/(.*)", "dest": "/api/tasks", "methods": ["GET"] },
    { "src": "/api/tasks/(.*)", "dest": "/api/tasks", "methods": ["GET"] },
    { "src": "/api/session/init", "dest": "/api/session" },
    { "src": "/api/session/(.*)", "dest": "/api/session", "methods": ["GET", "POST", "DELETE"] }
  ]
}
